---
export interface Props {
	tag: string;
}
const { tag } = Astro.props;
---

<a href={`/tags/${tag.toLowerCase()}`} aria-label={tag} class="font-montserrat">
	<span
		class="w-fit rounded-lg bg-gray-100 px-2 py-1 text-sm text-secondary shadow hover:text-accent md:px-5 md:py-2"
	>
		#{tag}
	</span>
</a>
