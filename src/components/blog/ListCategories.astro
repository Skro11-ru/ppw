---
import { getCategories } from '../../utils/post';
import Category from './Category.astro';
const categories = await getCategories();

const { activeCategory } = Astro.props;
---

<div class="relative flex min-w-full overflow-x-auto">
	<Category />
	{
		categories.map((category: string) => (
			<Category name={category} activeCategory={activeCategory} />
		))
	}

	<div
		class="absolute bottom-0 -z-40 hidden w-full border-b-2 sm:block dark:border-gray-600"
	>
	</div>
</div>
