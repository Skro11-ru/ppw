---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import self from '../../public/photos/main/self.jpg';
import { navigation } from '../components/widgets/nav/navigation';
import { config } from '../../config/config';
---

<Layout title={config.meta.title} width="full">
	<main class="flex h-[calc(100vh-var(--nav-height))] max-sm:relative">
		<Image
			src={self}
			alt="A bird sitting on a nest of eggs."
			width={self.width}
			quality={40}
			widths={[240, 540, 720, self.width]}
			sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${self.width}px`}
			loading="eager"
			class="w-1/2 flex-1 basis-1/2 object-cover object-top"
		/>

		<div
			class="flex flex-1 basis-1/2 flex-col justify-center gap-7 text-balance
			px-10 max-sm:absolute max-sm:bottom-0 max-sm:left-0
			max-sm:right-0 max-sm:top-[20%] max-sm:m-auto"
		>
			<h1 class="text-5xl font-bold">–ü—Ä–∏–≤–µ—Ç, —è –ê–Ω–∞—Å—Ç–∞—Å–∏—è üëã</h1>
			<p class="max-w-[500px]">
				—Å–ø–µ—Ü–∏–∞–ª–∏–∑–∏—Ä—É—é—Å—å –Ω–∞ –º—É–∂—Å–∫–æ–º –ø–æ—Ä—Ç—Ä–µ—Ç–µ, –ª–µ–≥–∫–æ –º–æ–≥—É —Ä–∞–∑—Ä—É—à–∏—Ç—å —Å—Ç–µ—Ä–µ–æ—Ç–∏–ø
				"–º—É–∂—á–∏–Ω—ã –Ω–µ –ª—é–±—è—Ç —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏—Ä–æ–≤–∞—Ç—å—Å—è". <br />–†–∞—Å–∫—Ä–æ–µ–º —Ç–≤–æ—é
				–∏–Ω–¥–∏–≤–∏–¥—É–∞–ª—å–Ω–æ—Å—Ç—å?!
			</p>
		</div>
	</main>
	<section class="m-auto max-w-[960px] px-10 py-16">
		<p class="mb-4 text-justify">
			–Ø —Å—Ç—Ä–µ–º–ª—é—Å—å —Å–æ–∑–¥–∞–≤–∞—Ç—å —É–Ω–∏–∫–∞–ª—å–Ω—ã–µ –∏ –∑–∞–ø–æ–º–∏–Ω–∞—é—â–∏–µ—Å—è –æ–±—Ä–∞–∑—ã —Å–≤–æ–∏—Ö –∫–ª–∏–µ–Ω—Ç–æ–≤,
			—Ä–∞—Å–∫—Ä—ã–≤–∞—è –∏—Ö –∏–Ω–¥–∏–≤–∏–¥—É–∞–ª—å–Ω–æ—Å—Ç—å –∏ –ø–æ–¥—á–µ—Ä–∫–∏–≤–∞—è –ª—É—á—à–∏–µ —á–µ—Ä—Ç—ã.
		</p>
		<p class="mb-4 text-justify">
			–ú–æ—è —Ä–∞–±–æ—Ç–∞ ‚Äî —ç—Ç–æ –±–æ–ª—å—à–µ, —á–µ–º –ø—Ä–æ—Å—Ç–æ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏—Ä–æ–≤–∞–Ω–∏–µ. –≠—Ç–æ –∏—Å–∫—É—Å—Å—Ç–≤–æ,
			–∫–æ—Ç–æ—Ä–æ–µ —Ç—Ä–µ–±—É–µ—Ç —Ç–æ–Ω–∫–æ–≥–æ –ø–æ–Ω–∏–º–∞–Ω–∏—è –ø—Å–∏—Ö–æ–ª–æ–≥–∏–∏ —á–µ–ª–æ–≤–µ–∫–∞, —É–º–µ–Ω–∏—è —Ä–∞–±–æ—Ç–∞—Ç—å —Å
			–ª—é–¥—å–º–∏ –∏ –Ω–∞—Ö–æ–¥–∏—Ç—å –∫ –Ω–∏–º –ø–æ–¥—Ö–æ–¥. –Ø —Å—Ç–∞—Ä–∞—é—Å—å —Å–æ–∑–¥–∞—Ç—å –∫–æ–º—Ñ–æ—Ä—Ç–Ω—É—é –∞—Ç–º–æ—Å—Ñ–µ—Ä—É –≤–æ
			–≤—Ä–µ–º—è —Å—ä–µ–º–∫–∏, —á—Ç–æ–±—ã –º–æ–∏ –∫–ª–∏–µ–Ω—Ç—ã –º–æ–≥–ª–∏ —Ä–∞—Å—Å–ª–∞–±–∏—Ç—å—Å—è –∏ —á—É–≤—Å—Ç–≤–æ–≤–∞—Ç—å —Å–µ–±—è
			–µ—Å—Ç–µ—Å—Ç–≤–µ–Ω–Ω–æ –ø–µ—Ä–µ–¥ –∫–∞–º–µ—Ä–æ–π.
		</p>
		<p class="mb-4 text-justify">
			–Ø —É–±–µ–∂–¥–µ–Ω–∞, —á—Ç–æ –∫–∞–∂–¥—ã–π —á–µ–ª–æ–≤–µ–∫ –∫—Ä–∞—Å–∏–≤ –∏ —É–Ω–∏–∫–∞–ª–µ–Ω –ø–æ-—Å–≤–æ–µ–º—É. –ú–æ—è –∑–∞–¥–∞—á–∞ ‚Äî
			–ø–æ–∫–∞–∑–∞—Ç—å —ç—Ç—É –∫—Ä–∞—Å–æ—Ç—É –∏ –∏–Ω–¥–∏–≤–∏–¥—É–∞–ª—å–Ω–æ—Å—Ç—å —á–µ—Ä–µ–∑ –æ–±—ä–µ–∫—Ç–∏–≤ –∫–∞–º–µ—Ä—ã. –Ø —Ä–∞–±–æ—Ç–∞—é —Å
			—Ä–∞–∑–ª–∏—á–Ω—ã–º–∏ —Å—Ç–∏–ª—è–º–∏ –∏ —Ç–µ—Ö–Ω–∏–∫–∞–º–∏ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–∏, —á—Ç–æ–±—ã –¥–æ—Å—Ç–∏—á—å –Ω–∞–∏–ª—É—á—à–µ–≥–æ
			—Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞ –¥–ª—è –∫–∞–∂–¥–æ–≥–æ –∫–ª–∏–µ–Ω—Ç–∞.
		</p>

		<p class="mb-10 text-justify">
			–ï—Å–ª–∏ –≤—ã –∏—â–µ—Ç–µ –ø—Ä–æ—Ñ–µ—Å—Å–∏–æ–Ω–∞–ª—å–Ω–æ–≥–æ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∞ –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –≤–∞—à–µ–≥–æ –ø–æ—Ä—Ç—Ä–µ—Ç–∞ –∏–ª–∏
			–¥—Ä—É–≥–æ–π —Ñ–æ—Ç–æ—Å–µ—Å—Å–∏–∏, —Å–≤—è–∂–∏—Ç–µ—Å—å —Å–æ –º–Ω–æ–π. –Ø –±—É–¥—É —Ä–∞–¥ –ø–æ–º–æ—á—å –≤–∞–º —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å
			–Ω–µ–∑–∞–±—ã–≤–∞–µ–º—ã–µ –º–æ–º–µ–Ω—Ç—ã –≤–∞—à–µ–π –∂–∏–∑–Ω–∏ –Ω–∞ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏—è—Ö!
		</p>

		<a
			href={navigation.find((item) => item.id === 'gallery')?.links?.[0]?.link}
			class="m-auto flex w-fit items-center
			rounded-4xl bg-stone-900 px-10 py-5 text-white hover:text-accent dark:bg-white dark:text-black"
		>
			{navigation.find((item) => item.id === 'gallery')?.title}
		</a>
	</section>
</Layout>

<style>
	:root {
		--nav-height: 80px;
	}
</style>
